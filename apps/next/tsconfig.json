{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@gluestack/app/*": [
        "../../packages/app/screens/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "app-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/create-password/index.jsx",
    "pages/forgot-password/index.jsx",
    "pages/login/index.jsx",
    "pages/register/index.jsx",
    "pages/verify-otp/index.jsx",
    "pages/index.jsx",
    "pages/_app.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}